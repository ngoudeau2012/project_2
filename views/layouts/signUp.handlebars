
  <div class="container">
      <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <form action="/user/register" method="post" enctype="application/x-www-form-urlencoded">
              <legend>New member? Join AQIR</legend>

              <div class="form-grom">
                  <label for="first_name">First Name</label>
                  <input type="text" class="form-control" name="first_name" id="first_name" placeholder="First Name" required>
              </div>

              <div class="form-grom">
                  <label for="last_name">Last Name</label>
                  <input type="text" class="form-control" name="last_name" id="first_name" placeholder="Last Name" required>
              </div>

               <div class="form-grom">
                  <label for="inputEmail" class="sr-only">Email address</label>
                  <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
              </div>

              <div class="form-grom">
                  <label for="inputUsername" class="sr-only">Username</label>
                  <input type="text" id="inputUsername" name="username" class="form-control" placeholder="Username" required>        

              </div>

               <div class="form-grom">
                  <label for="inputPassword" class="sr-only">Password</label>
                  <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required> 
              </div>

              <div class="form-grom">
                  <label for="inputConfirmPassword" class="sr-only">Confirm Password</label>
                  <input type="password" id="inputConfirmPassword" name="confirmationPassword" class="form-control" placeholder="Confirm Password" required>
              </div>
              <button type="submit" class="btn btn-primary">Sign up</button>

            </form>
             <br />
               <p>Already a member? <a href="login.handlebars">here</a></p>
          </div>

      </div>

  </div>
